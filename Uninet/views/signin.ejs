<!doctype html>
<!-- Guest Tab --> 
  
  <div class="col-md-6 col-sm-6 col-xs-12" style="margin-bottom: 80px">
      <center>
        <br><br><br>
        <h2><b>You're New?</b></h2>
        <p>Please Sign Up Now!</p>
        <a class="btn btn-primary btn-lg" href="/signup">Sign Up</a>
      </center>
  </div>
  <div class="col-md-6 col-sm-6 col-xs-12">
      <div class="loginmodal-container">
        <h2><center><b>Please Sign in</b></center></h2><br>
        <% if (typeof(errorMessage) !== 'undefined') { %>
          <div id="alert" class="alert alert-danger"><strong><%= errorMessage %></strong></div>
        <% } %>
        <form action="/signin" method="post">
          <input type="text" name="username" id="username" placeholder="Username" required="true" autofocus>
          <input type="password" name="password" id="password" placeholder="Password" required="true">
          <font size="10px"><b><input type="submit" name="signin" id="signin" class="btn btn-primary btn-lg" value="Sign In" style="margin-top: 5px"></b></font>
        </form>
        <div class="login-help" style="font-size: 16px">
          <a href="/signup">Register</a> - <a href="/repass">Forgot Password</a>
        </div>
      </div>
  </div>